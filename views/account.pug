extends layout

block content
  .inner
    h2=title
    form.form(action="/account" method="POST")
      label(for="name") Name
      input(type="text" id="name" name="name" value=user.name)
      label(for="email") Email
      input(type="text" id="email" name="email" value=user.email)
      input.button(type="submit" value="Edit")