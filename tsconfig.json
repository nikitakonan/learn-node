{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "typeRoots": ["./types", "./node_modules/@types"],
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
